<% if @error %>
<h1>Error: <%= @error %></h1>
<% end %>

<h1>Name of meetup: <%= @meetup.name %></h1>
<h1>Description: <%= @meetup.description %></h1>
<h1>Location: <%= @meetup.location %></h1>
<h1>Created by: <%= @meetup.creator %></h1>
<h1>Attending:</h1>
<ul>
  <% @meetup.users.each do |user| %>
   <li><%= user.username %><br>
   <img src="<%= user.avatar_url %>" height= "100" width= "100"></li>
  <% end %>
<ul>
  <p></p>
<form method="post">
  <button align="center"><input type="submit" value="Join" name= "Join"></button>
</form>
